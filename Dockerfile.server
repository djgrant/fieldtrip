FROM node:14-slim
WORKDIR /usr/src/app
COPY package.json yarn.lock tsconfig.base.json nx.json ./
COPY apps/server apps/server/
COPY courses courses/
RUN yarn install
RUN yarn run build:server

FROM node:14-slim
WORKDIR /
COPY --from=0 /usr/src/app/dist/apps/server ./
RUN yarn install
CMD [ "npm", "start" ]

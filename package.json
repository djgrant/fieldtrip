{
  "private": true,
  "name": "fieldtrip",
  "version": "1.0.0",
  "author": "Daniel Grant",
  "homepage": "https://github.com/notationhq/fieldtrip",
  "workspaces": [
    "apps/*",
    "courses"
  ],
  "scripts": {
    "build": "nx run-many --target=build --all",
    "db:types": "dotenv -- bash -c 'npx @databases/pg-schema-cli --database $DATABASE_URL --directory apps/server/src/types/generated'",
    "dev": "nx run-many --target=dev --projects=client,server --parallel=2",
    "dev:packages": "nx run-many --target=dev --parallel --all",
    "deploy:server:prod": "fly deploy --config ./fly.server.production.toml",
    "deploy:server:staging": "fly deploy --config ./fly.server.staging.toml",
    "deploy:client:prod": "fly deploy --config fly.client.prod.toml",
    "deploy:client:staging": "fly deploy --config fly.client.staging.toml",
    "start": "yarn workspace server start",
    "test": "nx run-many --target=test --all",
    "tunnel": "scripts/tunnel"
  },
  "dependencies": {
    "@reach/router": "^1.3.4",
    "evergreen-ui": "^6.7.1",
    "markdown-to-jsx": "^7.1.6",
    "mobx": "^6.3.12",
    "mobx-react-lite": "^3.2.3",
    "mobx-state-tree": "^5.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "socket.io-client": "^4.4.1",
    "@databases/pg": "^5.3.0",
    "@databases/pg-schema-cli": "^4.2.0",
    "@databases/pg-typed": "^4.1.0",
    "@djgrant/pg-taskq": "^1.0.0-alpha.38",
    "@octokit/auth-app": "^3.6.1",
    "@octokit/auth-oauth-user": "^1.3.0",
    "@packages/courses": "1.0.0",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "eventemitter3": "^4.0.7",
    "express": "^4.17.2",
    "keygrip": "^1.1.0",
    "p-queue": "^6.6.2",
    "probot": "^12.2.1",
    "socket.io": "^4.4.1"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "babel-preset-react-app": "^10.0.1",
    "dotenv-cli": "^4.1.1",
    "jest": "^27.4.7",
    "lerna": "^4.0.0",
    "ts-jest": "^27.1.3",
    "nx": "14.4.3",
    "@nrwl/nx-cloud": "latest",
    "@djgrant/components": "^0.4.1",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^16.11.19",
    "@types/reach__router": "^1.3.10",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.2",
    "http-proxy-middleware": "^2.0.1",
    "postcss": "^8.4.5",
    "react-scripts": "5.0.0",
    "tailwindcss": "^3.0.15",
    "@swc/core": "^1.2.133",
    "@swc/helpers": "^0.3.2",
    "@types/cookie-session": "^2.0.44",
    "dotenv": "^15.0.0",
    "nock": "^13.2.2",
    "onchange": "^7.1.0",
    "regenerator-runtime": "^0.13.9",
    "smee-client": "^1.2.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "resolutions": {
    "mini-css-extract-plugin": "2.4.5"
  }
}
